
                   
	   <table cellpadding="0" cellspacing="0" border="0" class="tblRepeter" >
	  	<tr>
	  		<td valign="top" style="width:190px;  padding:3px 0 5px 0;"><%=t('question.answer_order')%></td>
			<td valign="top" style="padding:3px 0 5px 0;"><%=t('question.display_order')%></td>
	  	</tr>
	  	<tr align="center">  
		  <td colspan="2">
		   	<div class="tblCols rowValue">
    	    <%@sub_questions.each do|answer|%>
		    <%= fields_for "answer[]", answer do |answer_fields| %>
			<%= answer_fields.hidden_field :id %>
           <div class="tblRepeaterRow mb0 pb10">  
			<%= answer_fields.text_field :name, :class=>"tblInputtxt validate[required,funcCall[checkHELLO]] text-input" %>
			<%= answer_fields.select :sort_order, options_for_select(@h_order.to_a, :selected =>answer.sort_order), {}, { :class => "hrclselect_order displayOrder" }%>
		   </div>  
		    <%end%>
		   <%end%>
		   </div>
		 </td> 
		 <td style="text-align:left;">  
		 <div class="tblCols rowValue"> 
		 <%@ans.each do|answer|%>
		    <%= fields_for "answerOrder[]", answer do |answerOrder_fields| %>
			    <%= answerOrder_fields.hidden_field :id %>
			    <div class="tblRepeaterRow mb0 pb10">  
				
                  <%=link_to image_tag("cross.jpg", :alt=>"Add Option",:style=>"float:left; width:20px;"), {:action=>"delete_hrcl_option",:controller=>"questions",:id=>answer.id,:question_id=>@question.id}, :confirm => t('json_message.are_you_sure')%><br>
				</div>
		    <%end%>
		<%end%>	
	      </div>
		 </td> 
		</tr>
	    </table> 